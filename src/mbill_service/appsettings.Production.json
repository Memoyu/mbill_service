{
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultDB": "0",
    "DataType": {
      "MySql": 0,
      "SqlServer": 1,
      "PostgreSQL": 2,
      "Oracle": 3,
      "Sqlite": 4
    },
    "MySql": "{MySqlConStr}",
    "SqlServer": null, //"Data Source=.;User ID=sa;Password=xxx;Integrated Security=True;Initial Catalog=MBill;Pooling=true;Min Pool Size=1",
    "PostgreSQL": null,
    "Oracle": null,
    "Sqlite": null, //"Data Source=|DataDirectory|\\mbill.db; Attachs=mbill.db; Pooling=true;Min Pool Size=1",
    "CsRedis": "{RedisConStr}"
  },
  "Cors": {
    "Name": "mbill",
    "Origins": "http://*.memoyu.com,http://localhost:10087"
  },
  "FileStorage": {
    "MaxFileSize": 83886080,
    "NumLimit": 3,
    "Include": "",
    "Exclude": ".exe,.dll",
    "ServiceName": "LocalFileService",
    "LocalFile": {
      "PrefixPath": "upload",
      "Host": "https://mbill.memoyu.com/"
    }
  },
  "Authentication": {
    "JwtBearer": {
      "SecurityKey": "{JwtSecurityKey}",
      "Expires": 259200,
      "Issuer": "Memoyu",
      "Audience": "Memoyu.Mbill.WebApi"
    }
  },
  "MinPro": {
    "AppID": "{MiniProAppId}",
    "AppSecret": "{MiniProAppSecret}"
  },
  "Cache": {
    "Enable": true,
    "ExpireSeconds": "300"
  },
  "CAP": {
    "DefaultStorage": "1",
    "DefaultMessageQueue": "0",
    "Storage": {
      "InMemoryStorage": 0,
      "MySql": 1,
      "SqlServer": 2
    },
    "MessageQueue": {
      "InMemoryQueue": 0,
      "RabbitMQ": 1
    },
    "RabbitMQ": {
      "HostName": "localhost",
      "UserName": "admin",
      "Password": "123456",
      "Port": 5672,
      "VirtualHost": "/admin"
    }
  },
  "Middleware": {
    "IPLog": {
      "Enabled": true
    },
    "SignalR": {
      "Enabled": false
    },
    "IpRateLimit": {
      "Enabled": true
    }
  }
}
